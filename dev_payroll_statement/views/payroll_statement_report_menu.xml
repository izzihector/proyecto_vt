<odoo>
		<report id="print_payroll_statement"
            model="emp.payroll.statement"
            string="Payroll Statement"
            report_type="qweb-pdf"
            name="dev_payroll_statement.payroll_statement_template"  
            file="dev_payroll_statement.payroll_statement_template"
            />
            
        
        <record id="paperformat_payroll_statement" model="report.paperformat">
            <field name="name">Payroll Statement A4</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">7</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">5</field>
            <field name="dpi">90</field>
        </record>
        
        <record id="print_payroll_statement" model="ir.actions.report">
            <field name="paperformat_id" ref="dev_payroll_statement.paperformat_payroll_statement" />
        </record>
        
        
        
        <template id="payroll_header_layout">
		    <!-- Multicompany -->
		    <t t-if="o and 'company_id' in o">
		        <t t-set="company" t-value="o.company_id"/>
		    </t>
		    <t t-if="not o or not 'company_id' in o">
		        <t t-set="company" t-value="res_company"/>
		    </t>

		    <div class="footer o_background_footer">
		        <div class="text-center">
		            <div class="text-muted" style="color:#000">
		                Page:
		                <span class="page"/>
		                of
		                <span class="topage"/>
		            </div>
		        </div>
		    </div>
		    <div class="article">
		      <t t-raw="0" />
		    </div>
		</template>
</odoo>
